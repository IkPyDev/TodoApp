<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">25dp</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:backgroundTint">#4D4117</item>
    </style>

    <style name="CustomTextViewName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:fontFamily">@font/rubik_reguler</item>
        <item name="android:textColor">#4D4117</item>
    </style>

</resources>